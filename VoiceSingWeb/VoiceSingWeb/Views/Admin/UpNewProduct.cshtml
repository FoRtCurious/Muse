@model Models.Goods
@{
    Layout = null;
}
<style>
.formcontent{
    border:2px solid grey;
    width:520px;
    padding-top:30px;
    border-radius:2px;
}
</style>

<div>
    <div style="padding-top:5px;padding-bottom:10px;">
        <label style="width:200px;font-size:15px;font-weight:600">商城管理&nbsp;&rang;&nbsp;新增上架商品</label>
    </div>
    @using(Ajax.BeginForm("SubmitGoods", "Admin", new AjaxOptions() { HttpMethod = "post", OnSuccess = "submitSuc" }, new { @id = "form", @class = "layui-form formcontent" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="layui-form-item">
            <label class="layui-form-label">商品标题</label>
            <div class="layui-input-block">
                <input type="text" name="name" required placeholder="请输入商品标题" class="layui-input" style="width:320px;">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">商品分类</label>
            <div class="layui-input-block" style="width:320px;">
                @Html.DropDownList("goodType", null, htmlAttributes: new { })
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">商品价格</label>
            <div class="layui-input-inline" style="width: 100px;">
                <input lay-verify="number" min="0" name="price" placeholder="￥" required class="layui-input" onblur="if (!/^\d+(\.\d+)?$/.test(this.value)){this.value='';}" step="0.01"/>
            </div>
        </div>       
        <div class="layui-form-item">
            <label class="layui-form-label">商品库存</label>
            <div class="layui-input-inline" style="width: 100px;">
                <input type="number" min="0" name="store" placeholder="数量" required class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">商品评论</label>
            <div class="layui-input-block">
                <input type="checkbox" name="comment" lay-skin="switch" lay-text="开启|关闭">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">商品状态</label>
            <div class="layui-input-block">
                <input type="radio" name="state" value="1" title="上架" checked>
                <input type="radio" name="state" value="0" title="下架">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">商品图片</label>
            <div class="layui-input-inline uploadHeadImage">
                <div class="layui-upload-drag" id="headImg">
                    <i class="layui-icon upload-pic"></i>
                    <p>点击上传图片，或将图片拖拽到此处</p>
                </div>                
            </div>
            <div class="layui-input-inline">
                <div class="layui-upload-list">
                    <img class="layui-upload-img headImage" src="~/Content/images/admin/preview.jpg" id="upimg" style="width:140px;height:140px;">
                    <p id="demoText"></p>
                    <input id="imgsrc" type="hidden" name="img"/>
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" type="submit">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    }
</div>
<script type="text/javascript" src="~/Content/layui-v2.5.6/layui/layui.all.js"></script>
<script type="text/javascript">
    function submitSuc(data) {
        if (data == "suc") {
            document.getElementById("form").reset();
            layui.layer.msg("新增商品成功", {
                icon: 1
            });
        }
        else {
            layui.layer.msg("新增商品失败", {
                icon: 5
            });
        }
    }
    layui.use(["jquery", "upload", "form", "layer"], function () {
        var $ = layui.$,
            element = layui.element,
            layer = layui.layer,
            upload = layui.upload      
        //拖拽上传
        var uploadInst = upload.render({
            elem: '#headImg'
            , url: '/Admin/UpGoodImg'  //执行文件上传控制器方法
            , size: 500
            , before: function (obj) {
                //预读本地文件示例，不支持ie8
                obj.preview(function (index, file, result) {
                    $('#upimg').attr('src', result); //图片链接（base64）
                });
            }
            , done: function (res) {
                //如果上传失败
                if (res.code == 500) {
                    return layer.msg('上传失败');
                }
                //上传成功
                //打印后台传回的地址: 把地址放入一个隐藏的input中, 和表单一起提交到后台, 此处略..
                var demoText = $('#demoText');
                demoText.html('<span style="color:green;">上传成功!</span>');
                var img = document.getElementById("imgsrc");
                img.value = res.url;
            }
            , error: function () {
                //演示失败状态，并实现重传
                var demoText = $('#demoText');
                demoText.html('<span style="color: #FF5722;">上传失败</span> <a class="layui-btn layui-btn-mini demo-reload">重试</a>');
                demoText.find('.demo-reload').on('click', function () {
                    uploadInst.upload();
                });
            }
        });
        //element.init();
    });
</script>
