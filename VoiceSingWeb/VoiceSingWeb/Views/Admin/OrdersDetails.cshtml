@model VoiceSingWeb.Models.OrderDetailsViewModels
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>layuiTest</title>
    <link rel="stylesheet" href="~/Content/layui-v2.5.6/layui/css/layui.css" media="all">
    <style>
        td{
            text-align: center;
        }
    </style>
</head>
<body>    
    <div style="padding:5px 0px 0px 10px;">
        <label style="width:200px;font-size:15px;font-weight:600">商城管理&nbsp;&rang;&nbsp;用户订单信息&nbsp;&rang;&nbsp;订单详情</label>
    </div>
    <div class="layui-form">
        <table class="layui-table">
            <colgroup>
                <col width="100">
                <col width="200">
                <col width="200">
                <col width="150">
                <col width="100">
            </colgroup>
            <thead>
                <tr>
                    <th style="text-align:center;">商品编号</th>
                    <th style="text-align:center;">商品名称</th>
                    <th style="text-align:center;">商品图片</th>
                    <th style="text-align:center;">商品单价</th>
                    <th style="text-align:center;">购买数量</th>
                    <th style="text-align:center;">合计价格</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.orderdetails)
                {
                    <tr>
                        <td>@item.Goods.goodsid</td>
                        <td>@item.Goods.goodsname</td>
                        <td><img src="@item.Goods.img" width="100" height="100" alt="img" /></td>
                        <td>@item.Goods.price</td>
                        <td>@item.qty</td>
                        <td>@item.price</td>
                    </tr>
                }
                <tr>
                    <td colspan="5">订单总计价格</td>
                    <td>@Model.order.Tot_amt (元)</td>
                </tr>
            </tbody>
        </table>
        <div class="layui-card">
            <div class="layui-card-header" style="font-size:18px;font-weight:500;">收货信息</div>
            <div class="layui-card-body">
                <span>订单号:@Model.order.orderid</span><span style="margin-left:20px;">订单生成时间:&nbsp;&nbsp;@Model.order.ordertime.ToString()</span><br>
                <span>收货姓名:&nbsp;&nbsp;&nbsp;&nbsp;@Model.order.Receipt_address.name</span><br>
                <span>收货地址:&nbsp;&nbsp;&nbsp;&nbsp;@Model.order.Receipt_address.address</span><br>
                <span>收货号码:&nbsp;&nbsp;&nbsp;&nbsp;@Model.order.Receipt_address.telephone</span><br>
            </div>
        </div>
    </div>
</body>
</html>