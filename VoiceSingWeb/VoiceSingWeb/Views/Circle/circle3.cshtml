@model IEnumerable<Models.Circle>
@{
    Layout = null;
}
<style>
    .follow {
        display: block;
        width: 10%;
        height: 30px;
        margin: 0 auto;
        margin-top: 8px;
        background: rgba(233, 7, 7, 0);
        border: 1px solid red;
        border-radius: 5px;
        color: red;
        outline: none;
    }
    
    /*点赞评论*/
    元素 {
    }

    .m-dlist .doper {
        margin: 18px 0 -2px;
        text-align: right;
        line-height: normal;
    }

    li, s {
        list-style: none;
    }

    .m-timeline {
        text-shadow: none;
    }

    html, body {
        word-wrap: break-word;
        word-break: break-word;
    }

    body, textarea, select, input, button {
        font-size: 12px;
        color: #333;
        font-family: Arial, Helvetica, sans-serif;
        -webkit-text-size-adjust: none;
    }
</style>

@foreach (var item in Model)
{

    <div class="row clearfix" style="min-height:200px;  overflow-y:hidden; ">
        <div class="col-md-12 column">
            @*头像及id*@
            <div class="row clearfix" style="height :70px; overflow :hidden ;">
                <div class="col-md-1 column">
                    <img alt="140x140" src="@item.Users.photo" class="img-circle" width="50" />   @*头像*@
                </div>
                <div class="col-md-11 column">
                    <h4 style="color:black ; "><a href="@Url.Action("userSingerDetails","Singers" ,new { id = @item.userid})">&nbsp;@Html.DisplayFor(model => item.Users.name)</a> </h4>
                    <small><span class="glyphicon glyphicon-music"> @Html.DisplayFor(modelItem => item.Users.UserType.userType_name) </span></small>  @*身份*@
                </div>
               
            </div>
            @*显示内容*@
            <div class="col-md-1 column">
            </div>
            <div class="col-md-9 column" style="min-height:80px;">
                <p> @Html.Raw(item.content) </p>
                @*<img alt="140x140" src="@item.imageurl" style="width :300px;" />*@
            </div>
            <div class="col-md-2 column">
            </div>
        </div>
        @*转赞评*@
        <div class="col-md-9 column">
            <small style="margin-left :70px;"> @item.uptime    </small> 
        </div>
        <div class="col-md-3 column">
            <div class="doper j-flag">
                <a href="#" class="s-fc7" data-action="like" style="display:inline-block;"> <i class="icn u-dicn u-dicn-3"> </i></a>
                <a href="@Url.Action("Like","Circle",new { id = item.cno})" onclick="SuccessLike()"  class="s-fc7" data-action="like" style="display:inline-block;"> 喜欢 <span class="j-flag " data-count="666">(@Html.DisplayFor(modelItem => item.thumbs))</span></a>
                <span class="line" style="display:inline-block;">|</span>
                <a href="@Url.Action("circledetail","Circle",new { id = item.cno})" class="s-fc7" data-action="comment" style="display:inline-block;">评论 <span class="j-flag " data-count="25">(@Html.DisplayFor(modelItem => item.replysum))</span></a>
            </div>
        </div>
    </div>
}

<script>

    function SuccessLike() {
        window.location.reload();
    }

</script>