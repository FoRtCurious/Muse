                    $("#Add-address").hide(100);
                    $("#Right-list5").hide(100);
                } else {
                    $("#Right-list2").hide(100);
                }
            });
            //跳转填写收货地址
            $("#add-myAd").click(function () {
                if ($("#Add-address").css("display") == "none") {
