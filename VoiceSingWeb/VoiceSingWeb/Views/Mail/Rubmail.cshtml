@model IEnumerable<Models.Mails>
@{
    Layout = null;
}

@foreach (var item in Model)
{
    <div class="card bg-info text-white">
        @*邮件展示开始*@
        <div class="card-body">收到“@item.recip_user”的邮件：</div>
        <strong>
            主题： @item.title
        </strong>
        <p>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @item.mail ;
        </p>
        <div style="text-align:right;">
            <small style="color :grey">
                2020/3/27
            </small>
            <p>
                <a class="btn" href="@Url.Action("Renew", "Mail",new{ id = @item.id })">恢复</a>
                <a class="btn" href="@Url.Action("Renew","Mail" ,new { id = Session["UserId"]})">彻底删除</a>
            </p>
        </div>
    </div>                                  @*邮件展示结束*@

}
